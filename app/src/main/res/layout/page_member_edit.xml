<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="net.atommobile.pemudakahfi.member.MemberModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#fff">

        <ScrollView
            android:id="@+id/scroll_register"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nama"
                    android:id="@+id/textView37"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="@{model.nama}"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"
                    style="@style/EditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Telepon"
                    android:id="@+id/textView38"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_telepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{model.telepon}"
                    android:layout_marginBottom="8dp"
                    style="@style/EditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Alamat"
                    android:id="@+id/textView41"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:text="@{model.alamat}"
                    android:id="@+id/txt_alamat"
                    android:layout_marginBottom="8dp"
                    style="@style/EditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Provinsi"
                    android:id="@+id/textView43"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp" />

                <Spinner
                    style="@style/EditText"
                    android:spinnerMode="dialog"
                    android:id="@+id/spin_provinsi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Kota"
                    android:id="@+id/textView44"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp" />

                <Spinner
                    style="@style/EditText"
                    android:spinnerMode="dialog"
                    android:id="@+id/spin_kota"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Kode Pos"
                    android:id="@+id/textView42"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_kodepos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="@{model.kodepos}"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"
                    style="@style/EditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gender"
                    android:id="@+id/textView45"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    />

                <Spinner
                    style="@style/EditText"
                    android:spinnerMode="dialog"
                    android:id="@+id/spin_gender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tgl Lahir"
                    android:id="@+id/textView46"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/txt_tgllahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="@{model.tgllahir}"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"
                    style="@style/EditText"
                    android:focusable="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Email"
                    android:id="@+id/textView39"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:text="@{model.email}"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"
                    style="@style/EditText"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ganti Password"
                    android:id="@+id/textView40"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text=""
                    android:singleLine="true"
                    android:layout_marginBottom="16dp"
                    style="@style/EditText"
                    />

                <Button
                    android:id="@+id/btn_update"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:textSize="16dp"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>
